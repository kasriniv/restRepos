package restou.greeting;


query "get greeting"()
    greeting : Greeting()
end

rule "greet master"
    when
        person : Person( name == "rettori")
    then
        String salutation = "Hello " + person.getName() + "! Hellofrom bpm64  trial4";
        insert(new Greeting(salutation));
end
rule "greet strangers"
    when
        person : Person( name != "rettori")
    then
        String salutation = "hi there, testing githook, get out of my way " + person.getName();
        insert(new Greeting(salutation));
end
